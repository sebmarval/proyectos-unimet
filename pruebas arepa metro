def calcular(numdearepas):
    
    aguainicio = 300  
    salinicio = 3     
    harinainicio = 200  

    
    agua = numdearepas*aguainicio
    sal = numdearepas*salinicio
    harina = numdearepas*harinainicio

    return agua, sal, harina


numdearepas = int(input("Ingrese la cantidad de arepas que desea hacer: "))


agua, sal, harina = calcular(numdearepas)


print(f"\nPara {numdearepas} arepas, serÃ¡ necesario tener:")
print(f"Agua: {agua} gramos")
print(f"Sal: {sal} gramos")
print(f"Harina: {harina} gramos")
